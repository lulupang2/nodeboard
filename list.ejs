<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    
    <style>
        table tr:hover {
            background-color: rgba(0, 0, 0, 0.2);
            cursor: pointer;
            transition: 0.5s ease-in;
        }
    </style>
    <title>List Page</title>
</head>

<body>
    <div class="container">

        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>번호</th>
                    <th>제목</th>
                    <th>내용</th>
                    <th>작성자</th>
                    <th>조회수</th>
                    <th>작성일</th>
                    <th>비밀번호</th>
                    <th>삭제</th>
                    <th>수정</th>
                </tr>
            </thead>
            <% 데이터.forEach(function (item, index) { %>

                <tr>

                    <td>
                        <%= item.num %>
                    </td>

                    <td>
                        <%= item.subject %>
                    </td>

                    <td>
                        <%= item.content %>
                    </td>

                    <td>
                        <%= item.name %>
                    </td>
                    <td>
                        <%= item.views %>
                    </td>
                    <td>
                        <%= item.wdate %>
                    </td>
                    <td>
                        <%= item.passwd %>
                    </td>


                    <td><a href="/delete/<%= item.num%>" class="button is-danger">삭제</a></td>
                    <td><a href="/edit/<%= item.num %>" class="button is-danger">수정</a></td>


                </tr>
                <% }); %>
        </table>
        <a href="/insert" class="button is-primary">글쓰기</a>
    </div>
</body>

</html>